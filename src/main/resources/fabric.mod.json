{
    "schemaVersion": 1,
    "id": "clientdbgcom",
    "version": "${version}",

    "name": "Client Debug Commands",
    "description": "A Fabric mod that allows you to use the chat to toggle the F3 debug options",
    "authors": [
        "Nick Kennedy"
    ],
    "contact": {
        "homepage": "https://fabricmc.net/",
        "sources": "https://github.com/approved/ClientDebugCommand"
    },

    "license": "GPL-3.0",
    "icon": "assets/clientdbgcom/icon.png",

    "environment": "*",
    "entrypoints": {
        "main": [
            "dev.odd.clientdbgcom.ClientDebugCommands"
        ]
    },
    "mixins": [
        "clientdbgcom.mixins.json"
    ],

    "depends": {
        "fabricloader": ">=0.11.3",
        "fabric": "*",
        "minecraft": "1.17.x",
        "java": ">=16"
    }
}